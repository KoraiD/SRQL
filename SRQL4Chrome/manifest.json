{
    "manifest_version": 2,
   
    "name": "SRQL4Chrome",
    "version": "0.2.0",
    "description": "Rollbar RQL visual helper plugin",
    "permissions": [
        "tabs",
        "notifications",
        "activeTab",
        "https://rollbar.com"
    ],

    "content_security_policy":"script-src 'self' https://cdn.rollbar.com/rollbarjs/refs/tags/v2.19.2/rollbar.min.js; object-src 'self'",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },

    "page_action": {
        "default_icon": { 
          "16": "images/icon16.png",
          "32": "images/icon32.png"
        },
        "default_title": "SRQL",
        "default_popup": "popup.html"
      }
  }